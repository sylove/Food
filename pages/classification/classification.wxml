<view>
  <view class="header">
    <view class="header-top">良卤（茶园店）</view>
    <view class="header-mid">
      <text>评价:4.8</text>
      <text>月售216单</text>
      <text>配送时长约30分钟</text>
    </view>
    <view class="header-bot">公告：单笔满35元起送</view>
  </view>
  <view class="content">
    <view class="nav">
      <block wx:for="{{navList}}" wx:key="key">
         <view class="title">{{item.name}}</view>
      </block>
    </view>
    <view class="detail">
      <!-- 肉食 -->
      <view class="meat">
        <view class="con-title">
          <text class="main-title">肉食</text>
          <text class="sub-title">大家喜欢吃，才叫真的好吃！</text>
        </view>
        <view>
          <block wx:for="{{meat}}" wx:key="{{item.id}}">
            <view class="con" data-id="{{item.id}}" >
              <view class="lt conlt">
                <image src="{{item.pic}}" />
              </view>
              <view class="lt conrt" >
                  <text class="title">{{item.name}}</text>
                <view class="mid" >
                  <text class="iconfont iconbiaoqian1"></text>
                  <text class="tip">{{item.tags}}</text>
                </view>
                <view class="" >
                  <text class="price">价格：</text>
                  <text class="money">{{item.originalPrice}}元/500g</text>
                </view>
              </view>
            </view>
          </block>
        </view>
      </view>
      <!-- 素食 -->
      <view class="meat">
        <view class="con-title">
          <text class="main-title">素食</text>
